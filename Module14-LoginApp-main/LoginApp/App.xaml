<Application x:Class="LoginApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginApp"
             xmlns:viewModel="clr-namespace:LoginApp.ViewModel"
             xmlns:view="clr-namespace:LoginApp.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:UserLoginViewModel}">
            <view:UserLoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModel:WelcomeViewModel}">
            <view:WelcomeView/>
        </DataTemplate>
    </Application.Resources>
</Application>
